{
  "name": "innervoice-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Monorepository for the InnerVoice project spanning web, native, and shared packages.",
  "license": "MIT",
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "repo/app",
    "repo/native",
    "repo/core",
    "repo/persona",
    "repo/scripts",
    "repo/docs"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "lint": "eslint --ext .ts,.tsx,.js,.jsx repo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --build tsconfig.base.json",
    "prepare": "husky install",
    "commitlint": "commitlint --edit $GIT_PARAMS"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.3.0",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "typescript": "^5.4.2"
  }
}
